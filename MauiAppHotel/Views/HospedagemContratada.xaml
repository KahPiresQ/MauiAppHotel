<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FAF8F6">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suíte Super Luxo"
               TextColor="#2C3E50"
               FontFamily="AncizarSerif"
               FontSize="50"
               HorizontalTextAlignment="Center"/>
        <Frame Margin="10" BackgroundColor="White" BorderColor="#D9822B" CornerRadius="15">

            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: " />
                    <Label Text="2"
                           TextColor="#2C3E50"/>

                </HorizontalStackLayout>

                <Label Text="Crianças:"/>
                <Label Text="2"
                       TextColor="#2C3E50"/>

            </HorizontalStackLayout>

        </Frame>
        <Frame Margin="10" BackgroundColor="#EDEDED" CornerRadius="15" BorderColor="Transparent">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto,Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" TextColor="#2C3E50"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" TextColor="#2C3E50"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" TextColor="#2C3E50"/>

                <Label Grid.Row="1" Grid.Column="0" Text="27/05/2024"/>
                <Label Grid.Row="1" Grid.Column="1" Text="30/05/2024"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>

            </Grid>
        </Frame>

        <Frame Margin="10" BackgroundColor="White" BorderColor="#D9822B" CornerRadius="15">
            <HorizontalStackLayout>
                <Label Text="Valor Total : " TextColor="#2C3E50"/>
                <Label Text=" R$ 750,00" TextColor="#2C3E50"/>
            </HorizontalStackLayout>
        </Frame>
        <Button Text="Voltar"
                HorizontalOptions="Center"
                BackgroundColor="#3B6978"
                TextColor="#FFFFFF"
                Clicked="OnVoltarContratada"/>

    </VerticalStackLayout>
</ContentPage>